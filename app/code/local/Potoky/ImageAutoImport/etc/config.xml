<?xml version="1.0"?>
<config>
    <modules>
        <Potoky_ImageAutoImport>
            <version>0.1.0</version>
        </Potoky_ImageAutoImport>
    </modules>
    <global>
        <models>
            <imageautoimport>
                <class>Potoky_ImageAutoImport_Model</class>
                <resource_model>imageautoimport_mysql4</resource_model>
            </imageautoimport>
            <imageautoimport_mysql4>
                <class>Potoky_ImageAutoImport_Model_mysql4</class>
                <entities>
                    <imageinfo>
                        <table>images_info</table>
                    </imageinfo>
                </entities>
            </imageautoimport_mysql4>
        </models>
        <resources>
            <imageautoimport_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </imageautoimport_write>
            <imageautoimport_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </imageautoimport_read>
            <imageautoimport_setup>
                <setup>
                    <module>Potoky_ImageAutoImport</module>
                    <class>Potoky_ImageAutoImport_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </imageautoimport_setup>
        </resources>
    </global>
</config>